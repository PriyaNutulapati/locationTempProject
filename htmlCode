<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Map View</title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  <style>
    #map { height: 100vh; }
  </style>
</head>
<body>
  <div id="map"></div>
  
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script>
    // JavaScript code to fetch coordinates from GitHub and display on the map
    let token = "";  // Replace with your GitHub Personal Access Token
    let username = "PriyaNutulapati";  // Replace with your GitHub username
    let repo = "locationTempProject";  // Replace with your GitHub repository name
    let filePathInRepo = "coordinates.txt";  // Path to the file in your GitHub repository
    
    async function fetchCoordinatesFromGitHub() {
        console.log("INSIDE FETCHCOORDINATESFROMGITHUB")
        const url = `https://api.github.com/repos/${username}/${repo}/contents/${filePathInRepo}`;
        
        const response = await fetch(url, {
            headers: {
                'Authorization': 'token ${token}',
            },
            console.log(response);
      });

      if (!response.ok) {
        console.error("Failed to fetch the file from GitHub:", response.statusText);
        return;
      }

      const fileData = await response.json();
      const content = atob(fileData.content);
      const coordinates = JSON.parse(content);
      return coordinates;
    }

    function initMap() {
      const map = L.map('map').setView([0, 0], 2);
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: 'Â© OpenStreetMap contributors'
      }).addTo(map);
      return map;
    }

    async function plotCoordinatesOnMap() {
      const map = initMap();
      const coordinates = await fetchCoordinatesFromGitHub();
      coordinates.forEach(coord => {
        const marker = L.marker([coord.latitude, coord.longitude]).addTo(map);
        marker.bindPopup(`Latitude: ${coord.latitude}, Longitude: ${coord.longitude}`);
      });
    }

    plotCoordinatesOnMap();
  </script>
</body>
</html>
